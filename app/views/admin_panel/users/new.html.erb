<div id="main"> 
  <div class="container mt-5"> 
    <div class="main-content card card-block">
      <div class="text-center p-5">
      <%= form_with model: [:admin_panel, @user], local: true do |f| %>
       <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>
            <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>      
        <div class="image-upload" id="profile-pic" >
          <% if @user.image.attached? %>
              <%= image_tag user.image, :class=> "img-circular"  %> 
          <% end %>
          <label for="file-input">
            <br>
            <i class="fas fa-camera fa-2x" onclick="uploadImage()"></i>
          </label>
           <%= f.file_field :image, id:"file-input" %>
        </div>
        <div class="row">
          <div class="field col-4">
            <%= f.label :first_name%><br />
            <%= f.text_field :first_name,autofocus: true, autocomplete: "first_name", class: 'w_100'%>
          </div>
          <div class="field col-4">
            <%= f.label :middle_name%><br />
            <%= f.text_field :middle_name,autofocus: true, autocomplete: "middle-name", class: 'w_100'%>
          </div>
          <div class="field col-4">
            <%= f.label :last_name%><br />
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last-name", class: 'w_100'%>
          </div>
        </div>
        <div class="row">
          <div class="field col-6">
            <%= f.label :email%><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w_100'%>
          </div>
          <div class="field col-6">
            <%= f.label :country %><br />
            <%= f.country_select :country, [], {class: "btn border border-info"}, autofocus: true, autocomplete: "country", format: :with_full_country_name%>
          </div>
        </div>
          <div class="field col-4 m-auto" >
            <%= f.label :phone_number %><br />
            <%= f.number_field :phone_number,autofocus: true, autocomplete: "phone-number", class:'quantity w_100'%>
          </div>
          <br>         
        <%= f.submit :Submit ,class:'btn btn-success'%>
      </div>
      <% end %>
      <%= link_to "Back", admin_panel_homepage_path, class: 'btn btn-success w_color'%>
    </div>
  </div>
</div>
