<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<div id="main"> 
  <div class="container p-4" > 
    <div class="main-content card card-block">
      <div class="text-center pt-4">
        <h4>Camps Applications of Users</h4>
        
        <div class="table-responsive p-3">
          <table id="mytable" class="table table-bordred table-striped">
            <thead>
              <th>ID</th>
              <th>Username</th>
              <th>Email</th>
              <th>% of Application</th>
              <th>Camp</th>
              <th>Status</th>
              <th>Actions</th>
              <th></th>
            </thead>
            <tbody>
              <% @camp_applications.each do |camp_application| %>
                <tr>
                  <td><%= camp_application.id %></td>
                  <td><%= camp_application.user.username %></td>
                  <td><%= camp_application.user.email %></td>
                  <td><%= camp_application.calculate_percentage * 20 %>%</td>
                  <td><%= camp_application.camp.camp_title%> </td>
                  <% if camp_application.calculate_percentage == 5 %>
                    <td> Completed</td>
                  <% else %>
                    <td>In Progress </td>
                  <% end %>
                  <td>
                    <% if camp_application.calculate_percentage == 5 %>
                    <%= link_to '<button class="btn buttons"><i class="material-icons table_icons">visibility</i></button>'.html_safe, admin_panel_camp_application_path(camp_application), title: 'Show Application' %>
                    <% end %>
                    <%= link_to '<button class="btn buttons"><i class="material-icons table_icons">delete</i></button>'.html_safe, admin_panel_camp_application_path(camp_application), method: :delete, data: { confirm: 'Are you sure?' }, title: 'Delete Application' %>
                  </td>
                </tr>
              <%end%>
            </tbody>
          </table>
          <div class="d-flex justify-content-center">
          </div>    
          <div class="d-flex justify-content-center">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>