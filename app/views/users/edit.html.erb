<div class="container col-4 su" >
  <div class="main-content card card-block">
    <div class="ptlr_20">
      <h1 class="text-center">Complete your Profile</h1>
      <%= form_for @user do |f| %>
			  <%= render "#{@user.current_step}_step", f: f %> 
			  <div class= "row">
			  	<div class="col">
					  <p><%= f.submit "Previous", class: 'btn btn-secondary', name: 'back_button' unless @user.first_step?  %></p>
					</div>
			  	<div class="col">
				  	<p><%= f.submit "Continue" , class: 'btn btn-success' unless @user.last_step?  %></p>
					</div>
				</div>
			<% end %>
			<%= link_to 'Back to Application Form', profile_user_path(current_user.id), class: 'w_color btn btn-success'%> 
		</div>
	</div>
</div>

